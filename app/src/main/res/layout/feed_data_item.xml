<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inbox_horizontal_margin"
            android:layout_marginRight="@dimen/inbox_horizontal_margin"
            android:layout_marginTop="@dimen/inbox_vertical_margin"
            android:background="@android:color/white"
            android:id="@+id/data">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/dataMessage"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:textColor="@android:color/background_dark"
                android:layout_alignBaseline="@+id/commentCount"
                android:layout_alignBottom="@+id/commentCount"
                android:layout_toRightOf="@+id/userName"
                android:layout_toEndOf="@+id/userName" />

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/userDataVideo"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_below="@+id/userIcon"
                android:layout_alignParentLeft="true"
                android:contentDescription="Main data"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/userData"
                android:layout_marginBottom="60dp"
                android:src="@drawable/drawer_header_background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_below="@+id/userIcon"
                android:layout_alignParentLeft="true"
                android:contentDescription="Main data"/>




            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/userIcon"
                android:src="@mipmap/avatar_empty_data"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:layout_marginBottom="5dp"
                android:textSize="13sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Name"
                android:textColor="@color/primary_dark_material_dark"
                android:paddingRight="8dp"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:textSize="16sp"
                android:id="@+id/userName"
                android:layout_alignBottom="@+id/userIcon"
                android:layout_toRightOf="@+id/userIcon"
                android:layout_toEndOf="@+id/userIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 days ago..."
                android:id="@+id/timeStamp"
                android:textColor="@color/primary_dark_material_light"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/likeButton"
                android:src="@mipmap/ic_action_good"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/likeCount"
                android:textColor="@color/primary_dark_material_light"
                android:paddingBottom="0dp"
                android:paddingRight="18dp"
                android:layout_alignBottom="@+id/userIcon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentButton"
                android:src="@mipmap/ic_action_chat"
                android:paddingRight="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primary_dark_material_light"
                android:paddingRight="22dp"
                android:paddingBottom="3dp"
                android:id="@+id/commentCount"
                android:layout_above="@+id/timeStamp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


</LinearLayout>